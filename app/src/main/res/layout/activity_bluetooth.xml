<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothActivity">

    <TextView
        android:id="@+id/bluetooth_activity_declare"
        android:layout_width="303dp"
        android:layout_height="82dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="56dp"
        android:text="@string/bluetooth_activity_declare"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_name_activity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="163dp"
        android:onClick="onStartNameActivityClicked"
        android:text="@string/start_name_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bluetooth_activity_declare" />
</androidx.constraintlayout.widget.ConstraintLayout>